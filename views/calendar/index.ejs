<%- include('../partials/header') %>

<h1>Monthly Calendar Example</h1>

<h2>
  <a href="/calendar?year=<%= year %>&month=<%= month - 1 %>">◀</a>
  <%= monthNames[month] %>, <%= year %>
  <a href="/calendar?year=<%= year %>&month=<%= month + 1 %>">▶</a>
</h2>

<section>
  <div>Sun</div>
  <div>Mon</div>
  <div>Tue</div>
  <div>Wed</div>
  <div>Thu</div>
  <div>Fri</div>
  <div>Sat</div>
  <% for (let day = 1; day <= daysInMo; day++) { %>
    <% if (day === 1) { %>
      <div style="grid-column: <%= dow %>;"><a href="/calendar/day/<%= year %>/<%= month + 1 %>/<%= day %>"><%= day %></a></div>
    <% } else { %>
      <div><a href="/calendar/day/<%= year %>/<%= month + 1 %>/<%= day %>"><%= day %></a></div>
    <% } %>
  <% } %>
</section>

<%- include('../partials/footer') %>
