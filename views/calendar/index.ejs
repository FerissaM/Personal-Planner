<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar</title>
    <link rel="stylesheet" href="/styles/calendar.css"> <!-- Include your calendar styles -->
    <style>
        /* Additional styles for modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 500px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <h1>Calendar</h1>
    <div class="calendar">
        <% for (let day = 1; day <= 31; day++) { %>
            <div class="calendar-day" id="day<%= day %>">
                <span><%= day %></span> 
            </div>
        <% } %>
    </div>

    <div id="addItemModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <form id="addItemForm" action="/calendar/add-item" method="POST">
                <input type="hidden" name="day" id="modalDay"> 
                <input type="text" name="item" placeholder="Add item">
                <button type="submit">Add Item</button>
            </form>
        </div>
    </div>

    <script src="/scripts/calendar.js"></script>
    <script>
        var modal = document.getElementById('addItemModal');

        var dayElements = document.querySelectorAll('.calendar-day');

        dayElements.forEach(function(dayElement) {
            dayElement.addEventListener('click', function() {
                var day = this.innerText;

                document.getElementById('modalDay').value = day;

                modal.style.display = "block";
            });
        });

        var span = document.getElementsByClassName("close")[0];

        span.onclick = function() {
            modal.style.display = "none";
        };

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        };
    </script>
</body>

</html>
