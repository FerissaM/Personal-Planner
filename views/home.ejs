<%- include('./partials/header') %>

<h1>Monthly Calendar Example</h1>

<h2>
    <a href="/calendar?year=<%= year %>&months=<%= month - 1%>">◀</a>
    <%= monthNames[month] %>, <%= year %>
    <a href="/calendar?year=<%= year %>&months=<%= month + 1%>">▶</a>
</h2>

<section>
    <div>Sun</div>
    <div>Mon</div>
    <div>Tue</div>
    <div>Wed</div>
    <div>Thu</div>
    <div>Fri</div>
    <div>Sat</div>
    <% for (let day = 1; day <= daysInMo; day++) { %>
        <!-- Make each day clickable with a link to the specific date -->
        <div>
            <a href="/year/<%= year %>/month/<%= month %>/day/<%= day %>"><%= day %></a>
        </div>
    <% } %>
</section>

<%- include('./partials/footer') %>