<%- include('./partials/header') %>

<h1>Monthly Calendar Example</h1>

<h2>
    <a href="/calendar?year=<%= year %>&months=<%= month - 1%>">◀</a>
    <%= monthNames[month] %>, <%= year %>
    <a href="/calendar?year=<%= year %>&months=<%= month + 1%>">▶</a>
</h2>

<section>
    <div>Sun</div>
    <div>Mon</div>
    <div>Tue</div>
    <div>Wed</div>
    <div>Thu</div>
    <div>Fri</div>
    <div>Sat</div>
    <% for (let day = 1; day <= daysInMo; day++) { %>
        <% if (day === 1) { %>
        <div style="grid-column: <%= dow %>;"><%= day %></div>
        <% } else { %>
        <div><%= day %></div>
        <% } %>
    <% } %>
</section>

